<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitem"
    style="@style/list_item_dense"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/quest_stars"
        android:layout_width="26dp"
        android:minWidth="26dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_color"
        tools:text="10"
        style="@style/text_medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:text="â˜…"
        style="@style/text_medium"/>

    <TextView
        android:id="@+id/quest_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        style="@style/text_medium"
        tools:text="A Crazy Quest"
        android:layout_weight="0.75"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/quest_hyper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            style="@style/hyper_badge"
            android:gravity="right"
            tools:text="@string/hyper"/>

        <TextView
        android:id="@+id/quest_unstable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        style="@style/text_small_secondary"
        android:gravity="right"
        tools:text="Unstable"/>
    </LinearLayout>

</LinearLayout>